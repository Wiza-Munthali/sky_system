<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SKY">

    <FontFamily x:Key="Montserrat-Regular">pack://application:,,,/Assets/Fonts/#Montserrat Regular</FontFamily>
    <FontFamily x:Key="Montserrat-Thin">pack://application:,,,/Assets/Fonts/#Montserrat Thin</FontFamily>
    <FontFamily x:Key="Montserrat-Bold">pack://application:,,,/Assets/Fonts/#Montserrat Bold</FontFamily>
    <FontFamily x:Key="Montserrat-Light">pack://application:,,,/Assets/Fonts/#Montserrat Light</FontFamily>
    <FontFamily x:Key="Montserrat-Medium">pack://application:,,,/Assets/Fonts/#Montserrat Medium</FontFamily>
    <FontFamily x:Key="Montserrat-Italic">pack://application:,,,/Assets/Fonts/#Montserrat Italic</FontFamily>
    <FontFamily x:Key="Montserrat-ExtraBold">pack://application:,,,/Assets/Fonts/#Montserrat ExtraBold</FontFamily>
    <FontFamily x:Key="Montserrat-ExtraLight">pack://application:,,,/Assets/Fonts/#Montserrat ExtraLight</FontFamily>

    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource Montserrat-Regular}"/>
    </Style>

</ResourceDictionary>